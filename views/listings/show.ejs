<% layout("layout/boilerplate") %>
  <div class="row mt-2">
    <div class="col-8 offset-3">
      <h3> <b>
        <%= listing.title %>
      </b></h3>
    </div>



    <div class="card col-6 offset-3 listing-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <p class="card-text">  <i> Owner by :- <%= listing.owner.username  %></i> </p>
          <br>
         <p> <%= listing.description %> <br></p>
          <p>  &#8377; <%= listing.price.toLocaleString("en-IN") %></p>
            <p>  <%= listing.location %></p> <br>
               <p> <%= listing.country %></p>

                  <br> <br>
     
      </div>
    </div>
    <div class="btns">

      <a href="/listings/<%= listing._id %>/edit" class="btn  add-btn col-1 offset-3">Edit</a>


      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark add-btn offset-3"> Delete</button>
      </form>


    </div>
 
   <div class="col-8 offset-3 mt-3 mb-3">
    <hr>
          <h4>Leave a Review</h4>
          <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
            <div class="mt-3 mb-3">
              <label for="rating" class="form-lable">Rating</label>
              <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" >
            </div>
            <div class="mt-3 mb-3">
              <label for="comment" class="form-lable">Comment</label>
              <textarea name="review[comment] " id="comment"  class="form-control" cols="20" rows="5" required ></textarea>
              <div class="invalid-feedback">Please Enter some comments for review</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
          </form>

          <hr>
          <P>All Review</P>
          <div class="row">

          <% for(review of listing.review){ %> 
          <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
              <h5 class="card-title">Ankit Rathore</h5>
              <p class="card-text"><%= review.comment %></p>
              <p class="card-text"><%= review.rating%></p>
            </div>
            <form  method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button class="btn btn-dark">Delete</button>
            </form>
          </div>
         <% } %>
        </div>
   </div>
  </div>