<% layout("layout/boilerplate") %>
  <div class="row mt-2">
    <div class="col-8 offset-3">
      <h3> <b>
        <%= listing.title %>
      </b></h3>
    </div>



    <div class="card col-6 offset-3 ">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <p class="card-text">
          <br>
          <%= listing.description %> <br>
            &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
              <%= listing.location %> <br>
                <%= listing.country %>

                  <br> <br>
        </p>
      </div>
    </div>
    <div class="btns">

      <a href="/listings/<%= listing._id %>/edit" class="btn  add-btn col-1 offset-3">Edit</a>


      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark add-btn offset-3"> Delete</button>
      </form>


    </div>
 
   <div class="col-8 offset-3 mt-3 mb-3">
    <hr>
          <h4>Leave a Review</h4>
          <form action="">
            <div class="mt-3 mb-3">
              <label for="rating" class="form-lable">Rating</label>
              <input type="range" min="1" max="5" id="rating" name="Review[rating]" class="form-range" >
            </div>
            <div class="mt-3 mb-3">
              <label for="comment" class="form-lable">Comment</label>
              <textarea name="review[comment] " id="comment"  class="form-control" cols="20" rows="5" ></textarea>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
          </form>
   </div>
  </div>